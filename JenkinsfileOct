pipeline 
{
    agent any 
	tools
	{
		maven "maven-3.9.9"
	}
	options 
	{
        // This adds timestamp to the console output of each step
        timestamps()
    	}
    	stages 
	{
        stage('checkout stage') 
		{ 
            steps 
			{
				git branch: 'developement', credentialsId: '0d21a676-92f7-4609-8ce5-d1fa5387d808', url: 'https://github.com/AnilBabu1011/maven-web-app-project-kk-funda.git'
                
            }
        }
        stage('Build') 
		{ 
            steps 
			{
				sh "mvn clean package"
            }
        }
        stage('SQREPORT')
		{
            steps
			{
				sh "mvn sonar:sonar"
			}
		}
        stage('DeployTONexus')
		{
           steps
			{
				sh "mvn deploy"
			}
        }
        stage('DeployAppToTomcat')
		{
           steps
		   {
				sshagent(['f2e24f63-6283-44ed-8468-1fa73cb031d1']) 
				{	
					sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@13.126.92.38:/opt/apache-tomcat-9.0.97/webapps/"    
				}
			}
        }    
    } //stages closing
	post 
	{
		success 
		{
			notifyBuild(currentBuild.result)
		}
		failure 
		{
			notifyBuild(currentBuild.result)
		}
	}
}//pipeline closing


def notifyBuild(String buildStatus = 'STARTED') 
{
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESS'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESS') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary, channel:'jio-dev')
}

